<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:layout_weight="2"
        android:orientation="vertical" >
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="杆数"
            />
        <ImageView 
             android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_up"
            android:id="@+id/dialog_playcount_totlecount_add"
            />
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="4"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:id="@+id/dialog_playcount_totlecount"
            />
         <ImageView 
             android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_down"
            android:id="@+id/dialog_playcount_totlecount_subtract"
            />
    </LinearLayout>
    <TextView  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textColor="@color/red"
        android:textSize="50sp"
        android:text="00"/>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:layout_weight="2"
        android:orientation="vertical" >
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="推杆"
            />
        <ImageView 
             android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_up"
            android:id="@+id/dialog_playcount_tuicount_add"
            />
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:id="@+id/dialog_playcount_tuicount"
            />
         <ImageView 
             android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_down"
            android:id="@+id/dialog_playcount_tuicount_subtract"
            />
    </LinearLayout>

</LinearLayout>