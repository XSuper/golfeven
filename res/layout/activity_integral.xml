<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.golfeven.firstGolf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_"
    android:orientation="vertical" >

    <com.golfeven.firstGolf.widget.HeadBack
        android:id="@+id/activity_integral_headback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:htitle="积分"
        app:progress_visible="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/integral_text"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:text="我的积分:" />

        <TextView
            android:id="@+id/activity_integral_totle"
           style="@style/integral_text"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="10dp"
            android:text="1000" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/h_jfbg"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="每日登陆"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="每日登陆可以自动获取50积分" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/h_jfbg"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="完善个人资料"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
           style="@style/integral_text"
            android:text="完善账户资料" />

        <TextView
            android:id="@+id/activity_integral_completeCount_text"
            style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_completeCount_btn"
           	style="@style/integral_btn"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
            style="@style/integral_text"
            android:text="上传真实图片" />

        <TextView
            android:id="@+id/activity_integral_uploadImage_text"
            style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_uploadImage_btn"
            style="@style/integral_btn"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
           style="@style/integral_text"
            android:text="上传成绩" />

        <TextView
            android:id="@+id/activity_integral_uploadGrade_text"
           style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_uploadGrade_btn"
            style="@style/integral_btn"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
            style="@style/integral_text"
            android:text="常出没地" />

        <TextView
            android:id="@+id/activity_integral_place_text"
            style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_place_btn"
           style="@style/integral_btn" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
           style="@style/integral_text"
            android:text="完成签名" />

        <TextView
            android:id="@+id/activity_integral_loveMsg_text"
            style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_loveMsg_btn"
           style="@style/integral_btn" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
            style="@style/integral_text"
            android:text="完成标签" />

        <TextView
            android:id="@+id/activity_integral_lable_text"
            style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_lable_btn"
            style="@style/integral_btn" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <TextView
            style="@style/integral_text"
            android:text="客户端好评" />

        <TextView
            android:id="@+id/activity_integral_evaluate_text"
            style="@style/integral_text"
            android:text="100" />

        <Button
            android:id="@+id/activity_integral_evaluate_btn"
            style="@style/integral_btn" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

</LinearLayout>