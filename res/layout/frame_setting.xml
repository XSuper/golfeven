<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/frame_setting_mydetail"
                style="@style/login_register_setting_all"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/frame_setting_mydetail_text"
                    style="@style/login_set_text"
                    android:text="我的主页" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_gravity="right|center_vertical"
                    
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_setting_integral"
                style="@style/login_register_setting_all"
                android:layout_marginTop="20dp" >

                <TextView
                    style="@style/login_set_text"
                    android:text="获取积分" />

                <ImageView
                    style="@style/arrow_right" />
            </LinearLayout>

            <LinearLayout
                style="@style/login_register_setting_top"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/frame_setting_clearcache"
                  style="@style/login_set_text"
                    android:text="清除缓存图片" />

                <Button
                    android:id="@+id/frame_setting_clear"
                   	style="@style/integral_btn"
                    android:text="清除" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_setting_evaluate"
                style="@style/login_register_setting_center" >

                <TextView
                   style="@style/login_set_text"
                    android:text="评价" />

                <ImageView
                   style="@style/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_setting_about"
                style="@style/login_register_setting_center" >

                <TextView
                    style="@style/login_set_text"
                    android:text="关于我们" />

                <ImageView
                    style="@style/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_setting_updating"
                style="@style/login_register_setting_bottom" >

                <TextView
                    android:id="@+id/frame_setting_updating_text"
                   style="@style/login_set_text"
                    android:text="版本更新" />

                <ImageView
                    style="@style/arrow_right" />
            </LinearLayout>

            <Button
                android:id="@+id/frame_setting_login"
                style="@style/btn_blue"
                android:layout_marginTop="20dp"
                android:text="登录" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>