<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.golfeven.firstGolf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    android:id="@+id/frame_attention">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="关注"
            android:gravity="center"
            android:id="@+id/frame_attention_mto"
            />
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
             android:gravity="center"
            android:id="@+id/frame_attention_otm"
            android:text="粉丝"
            />
    </LinearLayout>
    
    <com.golfeven.firstGolf.widget.PullToRefreshListView
        android:id="@+id/frame_attention_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>