<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.golfeven.firstGolf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
     >
   <com.golfeven.firstGolf.widget.HeadBack 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:htitle="图片浏览"
        app:progress_visible="false"
        app:rbtn2_visible="true"
        app:rbtn2_src="@drawable/ball_icon01"
        
        android:id="@+id/detail_gallery_headback"
        />
    <com.golfeven.welcome.MyScrollLayout
        android:layout_below="@id/detail_gallery_headback"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/detail_gallery_scrolllayout"
        android:visibility="visible"
        
         >
    </com.golfeven.welcome.MyScrollLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在加载,请稍后..."
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:minHeight="80dp" 
        android:id="@+id/detail_gallery_text"
        />
    
    <LinearLayout 
    	android:orientation="horizontal" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginBottom="24.0dip" 
    	android:layout_alignParentBottom="true" 
    	android:layout_centerHorizontal="true"
    	android:visibility="visible"
    	android:id="@+id/detail_gallery_indicators"
    	>
    	
    </LinearLayout>

</RelativeLayout>