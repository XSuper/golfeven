<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/frame_home_title"
        android:orientation="horizontal" 
        android:id="@+id/widget_home_navigation_top"
        >

        <TextView
            android:id="@+id/widget_home_navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="最新资讯" />

        <TextView
            android:id="@+id/widget_home_navigation_more"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="5dip"
            android:text="更多>>" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/widget_home_navigation_hscroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/widget_home_navigation_imgs"
             >

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>