<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.golfeven.firstGolf"
    android:id="@+id/frame_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.golfeven.firstGolf.widget.MainPageView 
                android:layout_width="fill_parent"
                android:layout_height="340dp"
                android:id="@+id/frame_home_PageView"
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/news"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_news"
                
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/hotActivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_hotActivity"
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_gallery"
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/ball_park"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_ball_park"
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/ball_team"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_ball_team"
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/ball_friends"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_ball_friends"
                />
            <com.golfeven.firstGolf.widget.HomeNavigation
                app:title="@string/golfInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_home_nav_golfInfo"
                />
            </LinearLayout>

          
    </ScrollView>

</LinearLayout>