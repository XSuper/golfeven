<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_weather_head"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="40dip"
    android:orientation="horizontal"
    android:background="@color/main_weather_head" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="上海"
        android:id="@+id/head_weather_place"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/head_weather_title"
        android:text="首页"
        android:layout_weight="3"
        />
    <ProgressBar 
		android:id="@+id/head_weather_progress" 
		style="@style/loading_small"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:visibility="visible"
		/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:text="晴"
        android:id="@+id/head_weather_info"
        android:layout_weight="1"
        />

</LinearLayout>