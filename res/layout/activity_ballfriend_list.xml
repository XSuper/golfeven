<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.golfeven.firstGolf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_"
    android:orientation="vertical" >

    <com.golfeven.firstGolf.widget.HeadBack
        android:id="@+id/activity_ballfriend_list_headback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:htitle="球友"
        app:progress_visible="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

       <Spinner 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            android:id="@+id/activity_ballfriend_list_spinner_sex"
           />
       <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/g_line" />
        <Spinner 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            android:id="@+id/activity_ballfriend_list_spinner_age"
           />
    </LinearLayout>

    <com.golfeven.firstGolf.widget.PullToRefreshListView
        android:id="@+id/activity_ballfriend_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>